<section class="container">
  <form class="auth-form" action="/questions" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        class="form-control"
        value="{{title}}"
        required
      />
    </div><div class="form-group">
      <label for="content">Content</label>
      <input
        type="text"
        id="content"
        name="content"
        class="form-control"
        value="{{content}}"
        required
      />
    </div>
    <button type="submit" class="mainBtn">Ask Question</button>
  </form>
</section>